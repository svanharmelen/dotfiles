{
  "coc.preferences.formatOnSaveFiletypes": ["rust"],

  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.errorSign": "ⓧ",
  "diagnostic.hintSign": "ⓘ",
  "diagnostic.infoSign": "ⓘ",
  "diagnostic.warningSign": "ⓦ",
  "diagnostic.maxWindowHeight": 30,
  "diagnostic.maxWindowWidth": 200,

  "explorer.contentWidthType": "win-width",
  "explorer.git.showIgnored": false,
  "explorer.icon.collapsed": "▸",
  "explorer.icon.expanded": "▾",
  "explorer.icon.customIcons": {
    "icons": {
      "folderClosed": {
        "code": "▸",
        "color": "#a60000"
      },
      "folderOpened": {
        "code": "▾",
        "color": "#a60000"
      }
    },
    "extensions": {},
    "filenames": {},
    "dirnames": {},
    "patternMatches": {},
    "dirPatternMatches": {}
  },
  "explorer.file.child.template": "[selection | clip | 1][indent][icon | 1] [filename growRight 1 omitRight 1] [diagnosticError | diagnosticWarning][git]",
  "explorer.keyMappings.global": {
    "<space>": ["wait", "toggleSelection", "normal:j"],
    "I": "toggleHidden",
    "K": "preview:labeling",
    "X": "collapse:all",
    "O": ["expanded?", "collapse:recursive", "expand:recursive"],
    "o": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "s": "open:vsplit:intelligent",
    "x": "collapse:recursive"
  },
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.width": 30,

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "analyses": {"ST1000": false, "ST1005": false},
        "completeUnimported": true,
        "experimentalWorkspaceModule": true,
        "staticcheck": true,
        "usePlaceholders": true
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },

  "rust-analyzer.serverPath": "/usr/local/bin/rust-analyzer",
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,

  "signature.preferShownAbove":false,
  "snippets.extends": {
    "typescript": ["javascript"]
  },
  "snippets.ultisnips.directories": ["gosnippets/UltiSnips"],

  "suggest.completionItemKindLabels": {
    "class": "Class",
    "color": "Color",
    "constant": "Constant",
    "enum": "Emun",
    "enumMember": "EnumMember",
    "event": "Event",
    "field": "Field",
    "file": "File",
    "folder": "Folder",
    "function": "Function",
    "interface": "Interface",
    "keyword": "Keyword",
    "method": "Method",
    "module": "Module",
    "operator": "Operator",
    "property": "Property",
    "reference": "Reference",
    "snippet": "Snippet",
    "struct": "Struct",
    "text": "Text",
    "typeParameter": "TypeParam",
    "unit": "Unit",
    "value": "Value",
    "variable": "Variable",
    "default": "Default"
  },
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.maxPreviewWidth": 200,
  "suggest.localityBonus": false,
  "suggest.minTriggerInputLength": 2
}
